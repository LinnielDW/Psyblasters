    <!--  Psyblaster Rifle  -->
    <ThingDef ParentName="BasePsyBlaster">
        <defName>PB_Rifle</defName>
        <label>Psyblaster Rifle</label>
        <description>A psy-assisted assault rifle. While initially less powerful than similar weighted weapons, shots fired from this gun are amplified by psychic energies supplied by its wielder. Upon impact, the wielder both loses and gains psychic focus and neural heat in small quantities to enhance the damage done by the bullet.</description>
        <graphicData>
            <texPath>Things/Item/Equipment/Weapon/Ultratech/PB_rifle_ultra</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <soundInteract>Interact_ChargeRifle</soundInteract>
        <statBases>
            <WorkToMake>45000</WorkToMake>
            <Mass>4.6</Mass>
            <AccuracyTouch>0.55</AccuracyTouch>
            <AccuracyShort>0.64</AccuracyShort>
            <AccuracyMedium>0.55</AccuracyMedium>
            <AccuracyLong>0.45</AccuracyLong>
            <RangedWeapon_Cooldown>2.00</RangedWeapon_Cooldown>
        </statBases>
        <costList>
            <Plasteel>35</Plasteel>
            <ComponentSpacer>3</ComponentSpacer>
        </costList>
        <verbs>
            <li>
                <verbClass>Verb_Shoot</verbClass>
                <hasStandardCommand>true</hasStandardCommand>
                <defaultProjectile>PB_PsyblasterShot_Rifle</defaultProjectile>
                <warmupTime>1.0</warmupTime>
                <range>25.9</range>
                <burstShotCount>3</burstShotCount>
                <ticksBetweenBurstShots>12</ticksBetweenBurstShots>
                <soundCast>Shot_ChargeRifle</soundCast>
                <soundCastTail>GunTail_Medium</soundCastTail>
                <muzzleFlashScale>9</muzzleFlashScale>
            </li>
        </verbs>
    </ThingDef>
    <ThingDef ParentName="BaseBullet">
        <defName>PB_PsyblasterShot_Rifle</defName>
        <label>blaster shot</label>
        <graphicData>
            <texPath>Things/Projectile/BlasterShot</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <shaderType>TransparentPostLight</shaderType>
        </graphicData>
        <thingClass>PsyBlasters.PsychicBlasterBullet</thingClass>
        <projectile>
