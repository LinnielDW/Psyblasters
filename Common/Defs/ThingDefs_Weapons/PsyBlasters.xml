            </recipeUsers>
            <displayPriority>200</displayPriority>
        </recipeMaker>
        <techLevel>Spacer</techLevel>
        <weaponTags>
            <li>SpacerGun</li>
        </weaponTags>
        <tradeTags>
            <li>WeaponRanged</li>
        </tradeTags>
        <weaponClasses>
            <li>RangedLight</li>
        </weaponClasses>
        <tools>
            <li>
                <label>stock</label>
                <capacities>
