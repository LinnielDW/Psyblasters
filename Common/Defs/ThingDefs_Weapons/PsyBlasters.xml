<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <ThingDef ParentName="BaseHumanMakeableGun">
        <defName>PB_Gun</defName>
        <label>Psyblaster</label>
        <description>A general-purpose gas-operated assault rifle for field or urban combat. It has good range, decent power, and good accuracy.</description>
        <graphicData>
            <texPath>Things/Item/Equipment/Weapon/TrackPsyBlaster2x</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <soundInteract>Interact_Rifle</soundInteract>
        <recipeMaker>
            <researchPrerequisite>PrecisionRifling</researchPrerequisite>
            <skillRequirements>
                <Crafting>6</Crafting>
            </skillRequirements>
        </recipeMaker>
        <thingSetMakerTags>
            <li>RewardStandardQualitySuper</li>
        </thingSetMakerTags>
        <statBases>
            <WorkToMake>40000</WorkToMake>
            <Mass>3.5</Mass>
            <AccuracyTouch>0.60</AccuracyTouch>
            <AccuracyShort>0.70</AccuracyShort>
            <AccuracyMedium>0.65</AccuracyMedium>
            <AccuracyLong>0.55</AccuracyLong>
            <RangedWeapon_Cooldown>1.70</RangedWeapon_Cooldown>
        </statBases>
        <costList>
            <Steel>60</Steel>
            <ComponentIndustrial>7</ComponentIndustrial>
        </costList>
        <verbs>
            <li>
                <verbClass>Verb_Shoot</verbClass>
                <hasStandardCommand>true</hasStandardCommand>
                <defaultProjectile>PsyblasterShot</defaultProjectile>
                <warmupTime>1.0</warmupTime>
                <range>30.9</range>
                <burstShotCount>1</burstShotCount>
                <ticksBetweenBurstShots>10</ticksBetweenBurstShots>
                <soundCast>Shot_AssaultRifle</soundCast>
                <soundCastTail>GunTail_Medium</soundCastTail>
                <muzzleFlashScale>9</muzzleFlashScale>
            </li>
        </verbs>
        <weaponTags>
            <li>IndustrialGunAdvanced</li>
            <li>AssaultRifle</li>
        </weaponTags>
        <tools>
            <li>
                <label>stock</label>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <power>9</power>
                <cooldownTime>2</cooldownTime>
            </li>
            <li>
                <label>barrel</label>
                <capacities>
                    <li>Blunt</li>
                    <li>Poke</li>
                </capacities>
                <power>9</power>
                <cooldownTime>2</cooldownTime>
            </li>
        </tools>
        <comps>
            <li Class="PsyBlasters.CompProperties_PsyBlaster">
                <compClass>PsyBlasters.PsyBlasterComp</compClass>
                <addedDamage>3</addedDamage>
                <psyCost>0.05</psyCost>
            </li>
        </comps>
    </ThingDef>

    <ThingDef ParentName="BaseBullet">
        <defName>PsyblasterShot</defName>
        <label>blaster shot</label>
        <graphicData>
            <texPath>Things/Projectile/BlasterShot</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <thingClass>PsyBlasters.PsychicBlasterBullet</thingClass>
        <projectile>
            <damageDef>Bullet</damageDef>
            <damageAmountBase>15</damageAmountBase>
            <armorPenetrationBase>0.35</armorPenetrationBase>
            <speed>70</speed>
        </projectile>
    </ThingDef>
</Defs>