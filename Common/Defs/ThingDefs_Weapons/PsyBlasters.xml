<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <ThingDef ParentName="BaseHumanMakeableGun">
        <defName>PB_Prototype</defName>
        <label>Psyblaster Prototype</label>
        <description>A prototype psy-assisted assault rifle. While initially less powerful than similar weapons, shots fired from this gun are amplified by psychic energies supplied by its wielder. Upon impact, the wielder both loses and gains psychic focus and neural heat in small quantities to enhance the damage done by the bullet.</description>
        <graphicData>
            <texPath>Things/Item/Equipment/Weapon/TrackPsyBlaster2x</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <soundInteract>Interact_ChargeRifle</soundInteract>
        <!--TODO change research-->
        <recipeMaker>
            <researchPrerequisite>Fabrication</researchPrerequisite>
            <skillRequirements>
                <Crafting>7</Crafting>
            </skillRequirements>
            <recipeUsers Inherit="False">
                <li>FabricationBench</li>
            </recipeUsers>
            <displayPriority>200</displayPriority>
        </recipeMaker>
        <thingSetMakerTags>
            <li>RewardStandardQualitySuper</li>
        </thingSetMakerTags>
        <statBases>
            <WorkToMake>45000</WorkToMake>
            <Mass>4.6</Mass>
            <AccuracyTouch>0.55</AccuracyTouch>
            <AccuracyShort>0.64</AccuracyShort>
            <AccuracyMedium>0.55</AccuracyMedium>
            <AccuracyLong>0.45</AccuracyLong>
            <RangedWeapon_Cooldown>2.00</RangedWeapon_Cooldown>
        </statBases>
        <costList>
            <Plasteel>35</Plasteel>
            <ComponentSpacer>3</ComponentSpacer>
        </costList>
        <verbs>
            <li>
                <verbClass>Verb_Shoot</verbClass>
                <hasStandardCommand>true</hasStandardCommand>
                <defaultProjectile>PB_PsyblasterShot</defaultProjectile>
                <warmupTime>1.0</warmupTime>
                <range>25.9</range>
                <burstShotCount>3</burstShotCount>
                <ticksBetweenBurstShots>12</ticksBetweenBurstShots>
                <soundCast>Shot_ChargeRifle</soundCast>
                <soundCastTail>GunTail_Medium</soundCastTail>
                <muzzleFlashScale>9</muzzleFlashScale>
            </li>
        </verbs>
        <weaponTags>
            <li>SpacerGun</li>
        </weaponTags>
        <tradeTags>
            <li>WeaponRanged</li>
        </tradeTags>
        <weaponClasses>
            <li>RangedLight</li>
        </weaponClasses>
        <tools>
            <li>
                <label>stock</label>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <power>9</power>
                <cooldownTime>2</cooldownTime>
            </li>
            <li>
                <label>barrel</label>
                <capacities>
                    <li>Blunt</li>
                    <li>Poke</li>
                </capacities>
                <power>9</power>
                <cooldownTime>2</cooldownTime>
            </li>
        </tools>
        <comps>
            <li Class="PsyBlasters.CompProperties_PsyBlaster">
                <compClass>PsyBlasters.PsyBlasterComp</compClass>
                <addedDamage>5</addedDamage>
                <addedArmPen>0.15</addedArmPen>
                <psyCost>0.05</psyCost>
                <entropyCost>8</entropyCost>
            </li>
        </comps>
    </ThingDef>

    <ThingDef ParentName="BaseBullet">
        <defName>PB_PsyblasterShot</defName>
        <label>blaster shot</label>
        <graphicData>
            <texPath>Things/Projectile/BlasterShot</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <thingClass>PsyBlasters.PsychicBlasterBullet</thingClass>
        <projectile>
            <damageDef>Bullet</damageDef>
            <damageAmountBase>13</damageAmountBase>
            <armorPenetrationBase>0.30</armorPenetrationBase>
            <speed>70</speed>
        </projectile>
    </ThingDef>
</Defs>